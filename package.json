{
  "name": "savemyexams",
  "version": "1.0.0",
  "main": "src/main.js",
  "scripts": {
    "start": "electron .",
    "dist": "electron-builder"
  },
  "author": "FaAzI Ahamed",
  "license": "ISC",
  "description": "",
  "dependencies": {
    "dotenv": "^16.4.5",
    "electron-log": "^5.2.0",
    "electron-store": "^10.0.0",
    "electron-updater": "^6.3.9",
    "p-limit": "^2.3.0",
    "puppeteer": "^23.4.0"
  },
  "build": {
    "appId": "com.example.savemyexamsdownloader",
    "productName": "SavemyExam Downloader",
    "files": [
      "src/index.html",
      "src/main.js",
      "src/preload.js",
      "src/renderer.js",
      "node_modules"
    ],
    "extraFiles": [
      ".env"
    ],
    "directories": {
      "output": "dist"
    },
    "win": {
      "target": "nsis"
    },
    "mac": {
      "target": "dmg"
    },
    "linux": {
      "target": "AppImage"
    },
    "publish": [
      {
        "provider": "github",
        "owner": "iamfaazi",
        "repo": "savemyexam-downloader"
      }
    ]
  },
  "devDependencies": {
    "electron": "^32.1.2",
    "electron-builder": "^25.0.5"
  }
}
